    "definitions": {
        "data.Book": {
            "type": "object",
            "properties": {
                "author": {
                    "type": "string"
                },
                "genre": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "title": {
                    "type": "string"
                },
                "unique_id": {
                    "type": "string"
                },
                "year": {
                    "type": "integer"
                }
            }
        },
        "data.Borrower": {
            "type": "object",
            "properties": {
                "book_id": {
                    "type": "integer"
                },
                "borrowed": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "member_id": {
                    "type": "string"
                }
            }
        },
        "data.BorrowerInfo": {
            "type": "object",
            "properties": {
                "book_id": {
